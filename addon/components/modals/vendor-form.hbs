<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="modal-body-container">
        {{#if @options.action}}
            <InputGroup>
                <div class="space-x-4 flex">
                    <button type="button" class="outline-none flex-1 rounded-lg bg-white dark:bg-gray-900 border-2 border-transparent px-4 py-2 flex items-center justify-center {{if (eq @options.action "select") 'border-blue-500'}}" {{on "click" (fn (mut @options.action) "select")}}>
                        <div class="mr-2.5">
                            <FaIcon @icon="handshake" @size="xl" class="text-blue-500" />
                        </div>
                        <div>
                            <h3 class="text-gray-900 dark:text-gray-100">Choose Integrated Vendor</h3>
                        </div>
                    </button>
                    <button type="button" class="outline-none flex-1 rounded-lg bg-white dark:bg-gray-900 border-transparent px-4 py-2 flex items-center justify-center {{if (eq @options.action "create") 'border-blue-500'}}" {{on "click" (fn (mut @options.action) "create")}}>
                        <div class="mr-2.5">
                            <FaIcon @icon="building" @size="xl" class="text-blue-500" />
                        </div>
                        <div>
                            <h3 class="text-gray-900 dark:text-gray-100">Create Custom Vendor</h3>
                        </div>
                    </button>
                </div>
            </InputGroup>
        {{/if}}

        {{#if (eq @options.action "select")}}
            <div class="grid grid-cols-2 gap-4 lg:grid-cols-3 mb-4">
                {{#each @options.supportedIntegratedVendors as |integratedVendor|}}
                    <button type="button" class="integrated-vendor-button {{if (eq @options.selectedIntegratedVendor.code integratedVendor.code) 'selected'}}" {{on "click" (fn @options.selectIntegratedVendor integratedVendor)}}>
                        <div>
                            <img src={{integratedVendor.logo}} alt={{integratedVendor.code}} class="w-20 h-20" width="80" height="80" />
                        </div>
                        <div>
                            <h3 class="text-sm font-semibold dark:text-white">{{integratedVendor.name}}</h3>
                        </div>
                    </button>
                {{/each}}
            </div>

            {{#if @options.selectedIntegratedVendor}}
                {{#each @options.selectedIntegratedVendor.params as |param|}}
                    <InputGroup @name={{smart-humanize param}} @value={{mut (get @options.integratedVendor.credentials param)}} @helpText={{concat "Optionally supply your own " (smart-humanize param) " to configure this vendor."}} />
                {{/each}}
                <InputGroup @wrapperClass="mb-2">
                    <Checkbox @value={{@options.integratedVendor.sandbox}} @label="Sandbox" @onToggle={{fn (mut @options.integratedVendor.sandbox)}} @alignItems="center" @labelClass="mb-0i" />
                </InputGroup>
                <div>
                    <button type="button" class="btn-link text-xs outline-none text-blue-600 hover:text-blue-600 mb-3" {{on "click" @options.toggleAdvancedOptions}}>
                        {{#if @options.showAdvancedOptions}}
                            <span>Hide Advanced</span>
                        {{else}}
                            <span>Show Advanced</span>
                        {{/if}}
                    </button>
                    {{#if @options.showAdvancedOptions}}
                        <InputGroup @name="Custom Host" @value={{@options.integratedVendor.host}} @helpText="Optionally provide a custom host that should be used for this integration." />
                        <InputGroup @name="Custom Namespace" @value={{@options.integratedVendor.namespace}} @helpText="Optionally provide a custom namespace or api version that should be used for the integration." />
                        <InputGroup @name="Webhook URL" @value={{@options.integratedVendor.webhook_url}} @helpText="Integrated vendors will typically require this so that Fleetbase can receive activity updates on the order. Do not change unless you know what you are doing! Changing this may break your order updates!" />
                    {{/if}}
                </div>
            {{/if}}
        {{else}}
            {{#if @options.isIntegratedVendor}}
                <div class="integrated-vendor-button border-0 mb-1">
                    <div>
                        <img src={{@options.vendor.provider_settings.logo}} alt={{@options.vendor.provider_settings.code}} class="w-20 h-20" width="80" height="80" />
                    </div>
                    <div>
                        <h3 class="text-sm font-semibold dark:text-white">{{@options.vendor.provider_settings.name}}</h3>
                    </div>
                </div>
                {{#if @options.isEditingCredentials}}
                    {{#each @options.vendor.provider_settings.params as |param|}}
                        <InputGroup @name={{smart-humanize param}} @value={{mut (get @options.vendor.credentials param)}} @helpText={{concat "Optionally supply your own " (smart-humanize param) " to configure this vendor."}} />
                    {{/each}}
                    <div class="my-4">
                        <Button @text="Cancel credentials reset" @type="danger" @size="sm" @onClick={{@options.toggleCredentialsReset}} />
                    </div>
                {{else}}
                    <div>
                        <div class="rounded-md border border-blue-300 dark:border-blue-600 bg-blue-100 dark:bg-blue-500 text-blue-900 dark:text-white text-xs px-4 py-2 mb-4">
                            <p>Sensitive credentials can only be reset, to update credentials you must re-enter the credentials.</p>
                            <a href="javascript:;" class="text-blue-500 dark:text-white" {{on "click" @options.toggleCredentialsReset}}>Click here to reset.</a>
                        </div>
                    </div>
                    {{#each @options.vendor.provider_settings.params as |param|}}
                        <InputGroup @name={{smart-humanize param}} @value="*********" @disabled="true" @helpText={{concat "Optionally supply your own " (smart-humanize param) " to configure this vendor."}} />
                    {{/each}}
                {{/if}}
                <InputGroup @wrapperClass="mb-2">
                    <Checkbox @value={{@options.vendor.sandbox}} @label="Sandbox" @onToggle={{fn (mut @options.vendor.sandbox)}} @alignItems="center" @labelClass="mb-0i" />
                </InputGroup>
                <div>
                    <button type="button" class="btn-link text-xs outline-none text-blue-600 hover:text-blue-600 mb-3" {{on "click" @options.toggleAdvancedOptions}}>
                        {{#if @options.showAdvancedOptions}}
                            <span>Hide Advanced</span>
                        {{else}}
                            <span>Show Advanced</span>
                        {{/if}}
                    </button>
                    {{#if @options.showAdvancedOptions}}
                        <InputGroup @name="Custom Host" @value={{@options.vendor.host}} @helpText="Optionally provide a custom host that should be used for this integration." />
                        <InputGroup @name="Custom Namespace" @value={{@options.vendor.namespace}} @helpText="Optionally provide a custom namespace or api version that should be used for the integration." />
                        <InputGroup @name="Webhook URL" @value={{@options.vendor.webhook_url}} @helpText="Integrated vendors will typically require this so that Fleetbase can receive activity updates on the order. Do not change unless you know what you are doing! Changing this may break your order updates!" />
                    {{/if}}
                </div>
            {{else}}
                <div class="grid grid-cols-1 gap-2 text-xs dark:text-gray-100">
                    <InputGroup @name="Name" @value={{@options.vendor.name}} @wrapperClass="mb-0" @helpText="The vendor's name, typically the name of a business." />
                    <InputGroup @name="Email" @value={{@options.vendor.email}} @wrapperClass="mb-0" @helpText="The vendor's email, this can be used to trigger emails to the vendor." />
                    <InputGroup @name="Phone" @value={{@options.vendor.phone}} @wrapperClass="mb-0" @helpText="The vendor's phone #, this can be used to trigger SMS or messages to the vendor." />
                    <InputGroup @name="Website" @value={{@options.vendor.phone}} @wrapperClass="mb-0" @helpText="The vendor's website, optionally add the vendors website for reference." />
                    <InputGroup @wrapperClass="mb-0">
                        <div class="flex items-center justify-between">
                            <label>
                                Address
                            </label>
                            <div>
                                {{#if @options.vendor.has_place}}
                                    <a href="javascript:;" class="mr-1" {{on "click" @options.editAddress}}>Edit</a>
                                {{/if}}
                                <a href="javascript:;" {{on "click" @options.newAddress}}>New</a>
                            </div>
                        </div>

                        <ModelSelect @modelName="place" @selectedModel={{@options.vendor.place}} @placeholder="Select Address" @triggerClass="form-select form-input" @infiniteScroll={{false}} @renderInPlace={{true}} @onChange={{fn (mut @options.vendor.place)}} as |model|>
                            {{model.name}} - {{model.street1}}
                        </ModelSelect>
                    </InputGroup>

                    <InputGroup @name="Country" @wrapperClass="mb-0">
                        <CountrySelect class="w-full form-input form-select form-datalist" @value={{@options.vendor.country}} @onChange={{fn (mut @options.vendor.country)}} placeholder="Country" />
                    </InputGroup>
                </div>
            {{/if}}
        {{/if}}
    </div>
</Modal::Default>