<EmberWormhole @to="sidebar-menu-items">
    <div class="mb-2">
        <Button @text="Create new order" @type="primary" @size="xs" @icon="signal-stream" @iconPrefix="fas" @iconSize="sm" @wrapperClass="w-full" class="w-full" @onClick={{this.createOrder}} />
    </div>
    <Layout::Sidebar::Panel @open={{true}} @title="Operations">
        <Layout::Sidebar::Item @route="console.fleet-ops.operations.orders" @icon="home">Dashboard</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.operations.scheduler" @icon="calendar-day">Scheduler</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.operations.service-rates" @icon="file-invoice-dollar">Service Rates</Layout::Sidebar::Item>
    </Layout::Sidebar::Panel>
    <Layout::Sidebar::Panel @open={{true}} @title="Resources">
        <Layout::Sidebar::Item @route="console.fleet-ops.management.drivers" @icon="steering-wheel">Drivers</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.management.vehicles" @icon="truck-container">Vehicles</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.management.fleets" @icon="car-bus">Fleets</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.management.vendors" @icon="warehouse-alt">Vendors</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.management.contacts" @icon="user-friends">Contacts</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.management.places" @icon="map-marked-alt">Places</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.management.fuel-reports" @icon="gas-pump">Fuel Reports</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.fleet-ops.management.issues" @icon="sensor-alert">Issues</Layout::Sidebar::Item>
    </Layout::Sidebar::Panel>
    <Layout::Sidebar::Item @onClick={{this.toggleSettings}} @icon="cogs">Settings</Layout::Sidebar::Item>
</EmberWormhole>

<Layout::Section::Container class="its-me">
    {{outlet}}
</Layout::Section::Container>

