<Layout::Section::Header @title="Service Rates" @searchQuery={{this.query}} @onSearch={{perform this.search}}>
    <FiltersPicker @columns={{this.columns}} @onChange={{this.applyFilters}} class="mr-2" />
    <VisibleColumnPicker @columns={{this.columns}} @activeParams={{this.activeParams}} @onChange={{this.updateColumns}} class="mr-2" />
    {{#if this.table.selectedRows}}
        <DropdownButton @icon="layer-group" @text="Bulk Action" @type="magic" @size="sm" @buttonWrapperClass="mr-2" @contentClass="dropdown-menu" as |dd|>
            <div class="next-dd-menu mt-2 mx-0">
                <div class="px-1">
                    <a href="#" class="text-red-500 next-dd-item" {{on "click" (fn this.sendDropdownAction dd "bulkDeleteServiceRates" this.selectedServiceRates)}}>
                        Delete Service Rates
                    </a>
                </div>
            </div>
        </DropdownButton>
    {{/if}}
    <Button @icon="plus" @iconPrefix="fas" @type="primary" @text="New" class="mr-2" @onClick={{this.createServiceRate}} />
    <Button @icon="long-arrow-up" @iconClass="rotate-icon-45" @text="Export" />
</Layout::Section::Header>

<Layout::Section::Body>
    <Table @rows={{@model}} @columns={{this.columns}} @selectable={{true}} @canSelectAll={{true}} @onSetup={{fn (mut this.table)}} />
</Layout::Section::Body>

{{outlet}}